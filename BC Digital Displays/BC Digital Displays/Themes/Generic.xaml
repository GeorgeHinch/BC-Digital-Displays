<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BC_Digital_Displays">

    <Color x:Key="White_Trans" >#7FFFFFFF</Color>
    <Color x:Key="White_Solid" >#FFFFFFFF</Color>
    <Color x:Key="Black_Trans" >#BF000000</Color>
    <Color x:Key="Black_Solid" >#FF000000</Color>

    <SolidColorBrush x:Key="Foreground_Solid" Color="#7FFFFFFF" />
    <SolidColorBrush x:Key="Foreground_Trans" Color="#7FFFFFFF" />
</ResourceDictionary>
